/* /* nested comments */ */

@entryPoint
func main() {
	let hello_world = """
		Hello, World!"""

	let hello = hello_world[0..<5]

	print(withLength: hello)

	let json = """
		{
			"name": "John Smith",
			"age": "25"
		}
	"""

	print(withLength: json)
}

func print(withLength slice: StringSlice) {
	print(slice, newline: false)
	print(" with length: ", newline: false)
	print(slice.length())
}