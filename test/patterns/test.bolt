*/
func equals(left: Direction, right: Direction): Bool {
	match (left, right) {
		(.north, .north) => true,
		(.east, .east) => true,
		(.south, .south) => true,
		(.west, .west) => true,
		_ => false,
	}
}

func matchDirection(d: Direction) {
	let toString = match d {
		.north => "north",
		.east => "east",
		.south => "south",
		.west => "west",
		_ => { "not needed" },
	}

	printLine(toString)
}